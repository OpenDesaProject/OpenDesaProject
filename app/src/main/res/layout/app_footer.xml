<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/footerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_blue">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:text="@string/ikuti_kami"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/socialMedias"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/textView5"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView5">

        <ImageView
            android:id="@+id/facebookIcon"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:contentDescription="Facebook"
            app:tint="@color/white"
            app:srcCompat="@drawable/ic_image_foreground" />

        <ImageView
            android:id="@+id/twitterIcon"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:contentDescription="Twitter"
            app:tint="@color/white"
            app:srcCompat="@drawable/ic_image_foreground" />

        <ImageView
            android:id="@+id/instagramIcon"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:contentDescription="Instagram"
            app:tint="@color/white"
            app:srcCompat="@drawable/ic_image_foreground" />

        <ImageView
            android:id="@+id/youtubeIcon"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:contentDescription="Youtube"
            app:tint="@color/white"
            app:srcCompat="@drawable/ic_image_foreground" />

        <TextView
            android:id="@+id/spanText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/desa_dan_kelurahan"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/textView5"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/socialMedias" />


    <LinearLayout
        android:id="@+id/desaLister"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="@+id/textView6"
        app:layout_constraintStart_toStartOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        android:baselineAligned="false">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/leftListDesa"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rightListDesa"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/kantor_kecamatan_gading_rejo"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/textView5"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/desaLister" />

    <LinearLayout
        android:id="@+id/lokasiLayout"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/textView5"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView8">

        <ImageView
            android:id="@+id/lokasiImage"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:contentDescription="Lokasi"
            app:tint="@color/white"
            app:srcCompat="@drawable/ic_location_on_foreground" />

        <TextView
            android:id="@+id/lokasiText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/gading_rejo"
            android:textColor="@color/white"
            android:textAlignment="gravity" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/faxLayout"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/textView5"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/lokasiLayout">

        <ImageView
            android:id="@+id/faxImage"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:contentDescription="Fax"
            app:tint="@color/white"
            app:srcCompat="@drawable/ic_print_foreground" />

        <TextView
            android:id="@+id/faxText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/telephone"
            android:textColor="@color/white"
            android:textAlignment="gravity" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/emailLayout"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/textView5"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/faxLayout">

        <ImageView
            android:id="@+id/emailImage"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:contentDescription="Email"
            app:tint="@color/white"
            app:srcCompat="@drawable/ic_mail_foreground" />

        <TextView
            android:id="@+id/emailText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/email"
            android:textColor="@color/white"
            android:textAlignment="gravity" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/telephoneLayout"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/textView5"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/emailLayout">

        <ImageView
            android:id="@+id/telephoneImage"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:contentDescription="Telephone"
            app:tint="@color/white"
            app:srcCompat="@drawable/ic_phone_foreground" />

        <TextView
            android:id="@+id/telephoneText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/phone"
            android:textColor="@color/white"
            android:textAlignment="gravity" />
    </LinearLayout>

    <TextView
        android:id="@+id/hakCipta1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/hak_cipta_1"
        android:textColor="@color/white"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/textView5"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/telephoneLayout" />

    <LinearLayout
        android:id="@+id/hakCiptaLayout"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/textView5"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/hakCipta1">

        <TextView
            android:id="@+id/hakCipta2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/hak_cipta_2"
            android:textAlignment="gravity"
            android:textColor="#29B6F6"
            app:layout_constraintEnd_toEndOf="@+id/textView5"
            app:layout_constraintStart_toStartOf="@+id/textView5"
            app:layout_constraintTop_toBottomOf="@+id/hakCipta1" />

        <ImageView
            android:id="@+id/githubImage"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:contentDescription="Github"
            app:tint="@color/white"
            app:srcCompat="@drawable/ic_image_foreground" />

        <TextView
            android:id="@+id/hakCipta2Text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/hak_cipta_3"
            android:textColor="@color/white"
            android:textAlignment="gravity" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>